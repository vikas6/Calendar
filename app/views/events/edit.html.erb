<div class="main-content">
	<div class="form">
		<h1>Edit Event</h1>
    <%= form_tag event_create_path do%>
      <p><%= label_tag :title %><%= text_field_tag :title, nil, placeholder: 'Event title...',:required => true  %></p>
      <p><%= label_tag :start_date %><%= date_field_tag(:start_date, Date.today,:required => true) %></p>
      <p><%= label_tag :end_date %><%= date_field_tag(:end_date, Date.today,:required => true) %></p>
      <p><%= label_tag :start_time %><%= time_field_tag :start_time, :required => true %></p>
      <p><%= label_tag :end_time %><%= time_field_tag :end_time, :required => true %></p>
      <p><%= label_tag :description %><%= text_field_tag :description, nil, placeholder: 'Event description...',:required => true%></p>
      <p>Select Users<%= select_tag 'user_ids', options_for_select(@users.collect{ |u| [u.username, u.id] }), :multiple => true %></p>
      <button class="save">Save</button>
      <button class="close"> <%= link_to "Discard", home_path %></button>
    <% end %>
	</div>
</div>