<div class="main-content">
	<div class="form">
		<h1>Edit Profile</h1>
    <%= form_tag profile_update_path do%>
      <p><%= label_tag :first_name %><%= text_field_tag :first_name, @user.first_name %></p>
      <p><%= label_tag :last_name %><%= text_field_tag :last_name, @user.last_name %></p>
      <p><%= label_tag :email %><%= email_field_tag :email, @user.email %></p>
      <p><%= label_tag :phone_no %><%= phone_field_tag :phone_no, @user.phone_no %></p>
      <p><%= label_tag :date_of_birth %><%= date_field_tag :date_of_birth, @user.date_of_birth %></p>
      <button class="profile_edit">Save</button>
      <button class="profile_close"> <%= link_to "Close", events_path %></button>
    <% end %>
	</div>
</div>
