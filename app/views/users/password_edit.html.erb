<div class="main-content">
	<div class="form">
		<h1>Password Change</h1>
    <%= form_tag password_update_path do %>
      <p><%= label_tag :old_password %><%= password_field_tag :old_password %></p>
      <p><%= label_tag :new_password %><%= password_field_tag :password_hash %></p>
      <p><%= label_tag :confirm_your_password %><%= password_field_tag :password_salt %></p>
      <button class="password_edit">Password Update</button>
      <button class="password_close"> <%= link_to "Close", events_path %></button>
    <% end %>
	</div>
</div>